pipeline {
    agent {
        docker {
            image 'node:6-alpine'
            args '-p 3000:3000'
        }
    }

    stages {
        stage('Build') {
            steps {
                sh 'npm install'
                sh 'rm -rf ~/tmp'
                sh 'npm cache clear'
                sh 'npm install -g node'
            }
        }
        stage('Test') {
            steps {
                sh 'npm test'
            }
        }


    }
}
